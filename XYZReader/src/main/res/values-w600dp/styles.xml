<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="detail_title" parent="Base.TextAppearance.AppCompat.Display1">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:lineSpacingMultiplier">0.9</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="detail_byline" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/medium_grey</item>
    </style>

    <style name="detail_body" parent="Base.TextAppearance.AppCompat.Subhead">
        <item name="android:textColorLink">@color/colorAccent</item>
        <item name="android:lineSpacingMultiplier">@fraction/detail_body_line_spacing_multiplier</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>